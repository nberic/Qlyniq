@model IEnumerable<Qlyniq.Models.Offices>

@{
    ViewData["Title"] = "Index";
}

<h3>Offices</h3>
<hr/>

<table class="table table-striped table-bordered text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th>
                <a class="btn btn-success" asp-action="Create"><i class="far fa-plus-square"> New Office </i></a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-marker edit"></i></a> | 
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-search details"></i></a> | 
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1 delete">
                    <i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
