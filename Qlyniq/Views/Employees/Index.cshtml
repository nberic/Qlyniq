@model IEnumerable<Qlyniq.Models.Employees>

@{
    ViewData["Title"] = "Index";
}

<h3>Employees</h3>

<table class="table table-striped table-bordered text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SocialSecurityNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMedicalWorker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDean)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeanOffice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office)
            </th>
            <th>
                <a class="btn btn-success" asp-action="Create"><i class="far fa-plus-square"> New Employee </i></a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SocialSecurityNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMedicalWorker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDean)
            </td>
            <td>
                @if(item.IsDean ?? false)
                {
                    @Html.DisplayFor(modelItem => item.DeanOffice.Name)    
                }
                else 
                {
                    <p>None</p>
                }
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Office.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-marker edit"></i></a> | 
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-search details"></i></a> | 
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1 delete">
                    <i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
