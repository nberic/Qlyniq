@model Qlyniq.Models.Appointments

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Appointments</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientFirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientFirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientLastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientLastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartingTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartingTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doctor.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Patient?.Name != null)
            {
                @Html.DisplayFor(model => model.Patient.Name)
            }
            else
            {
                <p>None</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
