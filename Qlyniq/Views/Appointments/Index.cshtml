@model IEnumerable<Qlyniq.Models.Appointments>

@{
    ViewData["Title"] = "Index";
}

<h3>Appointments</h3>
<hr/>

<table class="table table-striped table-bordered text-center">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                <a class="btn btn-success" asp-action="Create"><i class="far fa-plus-square"> New Appointment </i></a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if(item?.Patient is null)
                {
                    @Html.DisplayFor(modelItem => item.PatientFirstName)
                }
                else
                {
                    @item.Patient.FirstName
                }
            </td>
            <td>
                @if(item?.Patient is null)
                {
                    @Html.DisplayFor(modelItem => item.PatientLastName)
                }
                else
                {
                    @item.Patient.LastName
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Name)
            </td>
            <td>
                @if(item.Patient is null)
                {
                    <p>None</p>
                }
                else 
                {
                    @Html.DisplayFor(modelItem => item.Patient.Name)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
